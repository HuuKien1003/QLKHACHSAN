<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/font-awesome.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
          integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
          integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* Gradient background for navbar */
        .navbar {
            background: linear-gradient(90deg, #17a2b8, #007bff);
        }

        /* Styling for the navbar brand */
        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: white !important;
        }

        /* Custom styling for the navbar links */
        .navbar-nav .nav-link {
            color: white !important;
            margin-right: 10px;
            font-size: 1.1rem;
            transition: color 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #ffdd57 !important; /* Yellow color on hover */
            }

        /* Styling for the sidebar */
        .list-group-item {
            font-size: 1.1rem;
            padding: 15px;
            border: none;
            background-color: #f8f9fa;
            transition: background-color 0.3s, color 0.3s;
        }

            .list-group-item:hover {
                background-color: #007bff;
                color: white;
            }

        /* Container background */
        .container-fluid {
            margin-top: 20px;
        }

        /* Custom styling for buttons in forms */
        .btn-custom {
            background-color: #28a745;
            color: white;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #218838;
                transform: scale(1.05);
            }

        /* Footer position */
        .footer {
            position: relative;
            bottom: 0;
            width: 100%;
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 10px;
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        /* Flex container for sticky footer */
        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Content should take all available space */
        .content {
            flex: 1;
        }

        /* Footer styles */




    </style>
</head>

<body>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-sm navbar-dark">
            <a class="navbar-brand" href="#">Deluxe</a>
            <div class="col-8">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Phongs/index">Phòng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/LoaiPhongs/index">Loại Phòng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/PhieuDatPhongs/index">Phiếu đặt phòng</a>
                    </li>
                    <li class="nav-item">
                        <a href="/DichVus/index" class="nav-link">Dịch vụ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/KhachHangs/index">Khách Hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ChiTietPhieuDatPhongs/index">Chi tiết phiếu đặt phòng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/CTDichVus/index">Chi tiết dịch vụ </a>
                    </li>
                    <li class="nav-item" style="position: absolute; right: 0; bottom: 10px">
                        <a class="nav-link" href="/Home/index"><i class="fa-solid fa-house"></i></a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main container -->
        <div class="container-fluid">
            <div class="row gx-1" style="min-height:700px">
                <!-- Sidebar -->
                

                <!-- Content area -->
                <div class="col-12">
                    @RenderBody()
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer" style="margin-top:50px">
            <p>&copy; 2024 Deluxe Hotel. All Rights Reserved.</p>
        </div>

</body>

</html>
