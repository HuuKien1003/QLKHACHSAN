    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<!-- Phần body -->
<div class="container mt-5 p-5 border rounded shadow-lg" style="background: linear-gradient(135deg, #fff, #f7f7f7); box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);">
    <div class="text-center">
        <h2 class="text-success display-4 font-weight-bold">Phòng Đã Đổi Thành Công!</h2>
        <p class="lead text-secondary mt-4">Bạn đã thực hiện đổi phòng thành công</p>
    </div>

    <!-- Card thông tin -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="/Home/Index" class="btn btn-primary btn-lg px-5 py-3" style="border-radius: 50px; font-size: 1.2rem; box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);">
            Quay lại Trang chủ
        </a>
    </div>
</div>

<!-- Hiệu ứng và CSS tùy chỉnh -->
<style>
    h2 {
        animation: fadeInDown 1s ease-in-out;
    }

    .card {
        animation: bounceInUp 1.5s ease;
    }

    keyframes fadeInDown {
        0% {
            opacity: 0;
            transform: translateY(-30px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    keyframes bounceInUp {
        0% {
            opacity: 0;
            transform: translateY(50px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    body {
        background: #f0f4f7;
    }

    .container {
        max-width: 800px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.3);
        transform: scale(1.05);
    }
</style>

