@{
    ViewBag.Title = "ThanhCong";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<style>
    /* Nền gradient rực rỡ */
    .success-container {
        background: linear-gradient(135deg, #ff7e5f, #feb47b); /* Màu hồng-cam gradient */
        padding: 50px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
        color: white;
        max-width: 600px;
        margin: 0 auto;
    }

    h2 {
        font-family: 'Poppins', sans-serif;
        font-size: 3rem;
        margin-bottom: 30px;
    }

    .success-msg {
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    .btn-custom {
        background-color: white;
        color: #ff7e5f;
        border: none;
        padding: 15px 30px;
        font-size: 1.2rem;
        border-radius: 10px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #ff7e5f;
            color: white;
            transform: scale(1.05);
        }

    a {
        text-decoration: none;
        color: inherit;
    }

    .icon-check {
        font-size: 4rem;
        margin-bottom: 20px;
    }
</style>

<div class="success-container">
    <i class="fas fa-check-circle icon-check"></i> <!-- Icon checkmark cho thành công -->
    <h2>Đặt Phòng Thành Công!</h2>

    <p class="success-msg">
        Cảm ơn bạn đã đặt phòng tại khách sạn của chúng tôi. Chúc quý khánh có một trải nghiệm tuyệt vời tại Deluxe
    </p>

    <button class="btn btn-custom">
        <a href="/Home/index">Quay Lại Trang Chủ</a>
    </button>
</div>
