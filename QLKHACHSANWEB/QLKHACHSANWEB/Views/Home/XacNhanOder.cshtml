
@{
    ViewBag.Title = "XacNhanOder";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<div class="container text-center">
    <h1 class="text-success">Order Completed</h1>
    <p>Thank you for your purchase!</p>

    <!-- New line to display the real-time order date and time -->
    <p>Your order was placed on: <span id="order-time"></span></p>

    <a href="/Home/index" class="btn btn-primary">Return to Home</a>
</div>

<!-- Script to insert the current date and time -->
<script>
    const currentDate = new Date();
    document.getElementById('order-time').innerHTML = currentDate.toLocaleString();
</script>


